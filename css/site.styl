@import "fonts"
@import "sanitize"
@import "helpers"
@import "slick"

.container
  margin: 0 auto
  max-width: 1920px
  min-width: 315px
  width: 90%

.inner-container
  margin: 0 auto
  max-width: 1080px
  min-width: 310px
  width: 55%

.percent-col
  float: left
  box-sizing: content-box
$pcols = 10
for pcol in 1..$pcols
  .into-{pcol}
    width: ( 100% / pcol )

// VARIABLES

$gutter = 16px

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)
$margin-extra-large = ($gutter*8)

$font-size-basic = 16px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$font-size-heading = 40px
$font-size-subheading = 30px
$font-size-caption = 12px

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

$color-blue = blue

$basic-animation-speed = 0.3s

// TYPOGRAPHY

body
  font-family: 'Cinetype-Regular', helvetica, arial, sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: $font-size-heading

h2, h3
  font-size: $font-size-subheading

h4
  font-size: $font-size-basic

h5, h6
  font-size: $font-size-caption

h1,h2,h3,h4,h5,h6
  line-height: $font-leading-basic

p
  margin-bottom: 1em

em, i, .font-italic
  font-family: 'Cinetype-Italic', helvetica, arial, sans-serif
  font-style: normal

strong, b, .font-bold
  font-weight: normal

.font-uppercase
  text-transform: uppercase

// LINKS

a, a:active, a:visited, .u-dummy-link
  color:inherit
  &:hover
    color: $color-blue
    cursor: pointer


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

.overlay-active
  overflow: hidden

img
  max-width: 100%
  height: auto

.js-packery-container
  opacity: 0
  transition: opacity $basic-animation-speed


// HEADER

#header
  margin-top: $margin-basic
  margin-bottom: $margin-basic

#menu
  li
    display: inline-block
    margin-left: 0.5em

#scroll-to-menu
  position: fixed
  top: $margin-basic + 2px
  right: $margin-small

// SEARCH

#tags
  li
    display: inline-block
    margin-left: 0.5em

#search-input
  border-bottom: 1px dotted $color-black-soft
  outline: none


// INDEX

.type-post, .type-project
  margin-bottom: $margin-small

.type-post
  color: $color-white-soft

.post-title
  box-sizing: border-box
  padding: $margin-basic
  position: relative
  background-size: cover
  background-position: center center

.post-toggle
  position: absolute
  right: $margin-basic

.post-copy
  display: none
  box-sizing: border-box
  padding: $margin-small $margin-basic $margin-basic
  text-align: left
  margin: 0 auto
  max-width: 700px

  a, a:active, a:visited, .u-dummy-link
    color: $color-blue
    text-decoration: underline


    // INDEX PROJECTS

.project-video
  width: 100%


// VISUAL INDEX

.grid-hover
  img
    transition: opacity $basic-animation-speed
  &:hover
    img
      opacity: 0.3
    .grid-hover-holder
      opacity: 1

.grid-hover-holder
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 99
  box-sizing: border-box
  padding: $margin-small
  text-align: center
  opacity: 0
  transition: opacity $basic-animation-speed


// SINGLE

.viewer
  position: relative

  // SLIDER

.single-nav
  position: absolute
  z-index: 99999
  svg
    width: $font-size-basic

#single-close
  top: $margin-small
  right: $margin-small

#single-next
  top: 49%
  right: $margin-small

#single-prev
  top: 49%
  left: $margin-small

#single-slider
  position: relative

#single-slider, #single-slider-text
  opacity: 0
  transition: opacity $basic-animation-speed

.js-slick-container, .slick-list, .slick-track
  height: 100%

.slider-item
  width: 100%
  height: 100%
  display: block
  box-sizing: border-box
  padding: $margin-basic

.slider-img
  margin: 0 auto

#single-slider-text
  text-align: center
  padding: 1em 0
  display: block
  width: 60%
  margin: 0 auto


// OVERLAY

.overlay
  position: absolute
  background-color: $color-white-soft
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 999
  display: none

.overlay-nav
  position: absolute
  z-index: 999
  box-sizing: border-box
  padding: $margin-small
  svg
    max-width: $margin-small
    height: auto

.overlay-close
  top: 0
  right: 0

.overlay-next
  top: 49%
  right: 0

.overlay-previous
  top: 49%
  left: 0

  // OVERLAY VIDEO

#video-overlay
  .u-holder
    position: absolute
    top: 0
    width: 90%
    left: 5%

.vimeo-wrapper
	position: relative
	padding-bottom: 56.25%
	padding-top: 25px
	height: 0

.vimeo-wrapper iframe
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%


// SINGLE PROJECT

#project-header
  padding: $margin-basic 0

#project-visuals
  margin-bottom: $margin-extra-large

#project-visuals-overlay
  display: none

#project-copy-nav
  margin-bottom: $margin-large
  li
    list-style: none

.project-copy-section
  margin-bottom: $margin-large
  img
    float: left
    padding: $margin-small
    &.alignright
      float: right


