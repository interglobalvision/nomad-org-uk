@import "fonts"
@import "sanitize"
@import "helpers"
@import "slick"

.header-container
  margin: 0 auto
  max-width: 2280px
  min-width: 310px
  width: 95%

.container
  margin: 0 auto
  max-width: 1920px
  min-width: 310px
  width: 80%

.inner-container
  margin: 0 auto
  max-width: 1680px
  min-width: 310px
  width: 70%

.text-container
  margin: 0 auto
  max-width: 1440px
  min-width: 310px
  width: 60%

.percent-col
  float: left
  box-sizing: content-box
$pcols = 10
for pcol in 1..$pcols
  .into-{pcol}
    width: ( 100% / pcol )

// VARIABLES

$gutter = 16px

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / 4)
$margin-basic = ($gutter * 2)
$margin-large = ($gutter * 4)
$margin-extra-large = ($gutter * 6)

$font-size-basic = 16px
$font-leading-basic = 1.45em
$font-tracking-basic = 0.001em
$font-tracking-large = 0.01em

$font-size-larger = 20px
$font-size-heading = 40px
$font-size-subheading = 30px
$font-size-caption = 12px

$color-black-soft = rgb(14,14,14)
$color-white-soft = white

$color-blue = blue

$basic-animation-speed = 0.3s

// TYPOGRAPHY

body
  font-family: 'Cinetype-Regular', helvetica, arial, sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: $font-size-heading
  font-weight: normal !important

h2, h3
  font-size: $font-size-subheading
  font-weight: normal !important

h4
  font-size: $font-size-basic

h5, h6
  font-size: $font-size-caption

h1,h2,h3,h4,h5,h6
  line-height: $font-leading-basic

p
  margin-bottom: 1em

em, i, .font-italic
  font-family: 'Cinetype-Italic', helvetica, arial, sans-serif
  font-style: normal

strong, b, .font-bold
  font-weight: bold

.font-uppercase
  text-transform: uppercase

.font-caption
  font-size: $font-size-caption

// LINKS

a, a:active, a:visited, .u-dummy-link
  color:inherit
  &:hover
    color: $color-blue
    cursor: pointer


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

.invert-colors
  color: $color-white-soft
  background-color: $color-black-soft

.overlay-active
  overflow: hidden

img
  max-width: 100%
  height: auto

.u-pad-basic
  box-sizing: border-box
  padding: $margin-basic

.u-pad-small
  box-sizing: border-box
  padding: $margin-small

.u-pad-tiny
  box-sizing: border-box
  padding: $margin-tiny

.nomad-button
  text-align: center
  margin: $margin-basic auto
  padding: $margin-small
  a
    border: 2px solid black
    padding: $margin-small
    text-transform: uppercase
    font-size: $font-size-larger
    letter-spacing: $font-tracking-large

// HEADER

#header
  margin-top: $margin-small
  margin-bottom: $margin-basic

#menu
  li
    display: inline-block
    margin-left: 0.5em
    a.active
      color: $color-blue

#scroll-to-menu
  position: fixed
  top: $margin-small + 2px
  right: $margin-small
  z-index: 99

.header-social
  svg
    height: 1.2em
    width: 1.2em
    vertical-align: middle
    padding-bottom: 2px
    &:hover
      path, polygon
        fill: $color-blue


// INDEX

.type-post, .type-project
  margin-bottom: $margin-small

.type-post
  color: $color-white-soft

.post-title
  box-sizing: border-box
  padding: $margin-basic
  position: relative
  background-size: cover
  background-position: center center
  &.js-open
    .post-toggle
      .post-toggle-close
        display: inline-block !important
      .post-toggle-open
        display: none !important

.post-toggle
  position: absolute
  right: $margin-basic

.post-toggle-open
  display: inline-block

.post-toggle-close
  display: none

.post-copy
  display: none
  box-sizing: border-box
  padding: $margin-small $margin-basic $margin-basic
  text-align: left
  margin: 0 auto
  max-width: 700px

  a, a:active, a:visited, .u-dummy-link
    color: $color-blue
    text-decoration: underline


    // INDEX PROJECTS

.project-video
  width: 100%

.index-project-title
  padding: $margin-small 0

.mobile-or-tablet-thumb
  display: none

.mobile-or-tablet
  .mobile-or-tablet-thumb
    display: block
  .project-video
    display: none

.u-holder
  transition: background-color $basic-animation-speed

.grid-hover
  &:hover
    .u-holder
      background-color: rgba(0,0,0,.6)
    .grid-hover-holder
      opacity: 1

.grid-hover-holder
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 99
  box-sizing: border-box
  padding: $margin-tiny
  text-align: center
  color: $color-white-soft
  opacity: 0
  transition: opacity $basic-animation-speed

// SINGLE

.viewer
  position: relative

  // PACKERY

.js-packery-container
  height: 80vh
  transition: height $basic-animation-speed

.js-grid-img
  opacity: 0
  transition: opacity $basic-animation-speed
  &.img-loaded
    opacity: 1

  // SLIDER

.single-nav
  position: absolute
  z-index: 99999
  svg
    width: $font-size-basic

#single-close
  top: $margin-small
  right: $margin-small

#single-next
  top: 49%
  right: $margin-small

#single-prev
  top: 49%
  left: $margin-small

#single-slider
  position: relative

#single-slider, #single-slider-text
  opacity: 0
  transition: opacity $basic-animation-speed

.js-slick-container, .slick-list, .slick-track
  height: 100%

.slider-item
  width: 100%
  height: 100%
  display: block
  box-sizing: border-box
  padding: $margin-large
  &:hover
    cursor: e-resize

.slider-img
  margin: 0 auto

#single-slider-text
  text-align: center
  padding: 1em 0
  display: block
  width: 60%
  margin: 0 auto


// OVERLAY

.overlay
  position: fixed
  background-color: $color-white-soft
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 999
  display: none

.overlay-nav
  position: absolute
  z-index: 999
  box-sizing: border-box
  padding: $margin-small
  svg
    max-width: $margin-small
    height: auto

.overlay-close
  top: 0
  right: 0

.overlay-close-character
  font-size: 3em

.overlay-next
  top: 49%
  right: 0

.overlay-previous
  top: 49%
  left: 0

.overlay-caption-holder
  position: absolute
  bottom: 0
  left: 0
  width: 100%
  box-sizing: border-box
  padding: $margin-small

  // OVERLAY VIDEO

#video-overlay
  .u-holder
    position: absolute
    top: 0
    left: 0
    box-sizing: border-box
    padding: $margin-large

#video-overlay-insert
  text-align: center


// SINGLE PROJECT

#project-header
  top: 0
  left: 0
  width: 100%
  z-index: 10
  text-shadow: -1px -1px 0 $color-white-soft, 1px -1px 0 $color-white-soft, -1px 1px 0 $color-white-soft, 1px 1px 0 $color-white-soft;

#project-visuals
  margin-bottom: $margin-extra-large

.project-visual
  box-sizing: border-box
  padding: $margin-tiny

#project-visuals-overlay
  display: none

#project-copy-nav
  margin-bottom: $margin-large
  li
    list-style: none
    margin-bottom: $margin-micro
  h4
    font-weight: normal

.project-copy-section
  margin-bottom: $margin-large
  img
    float: left
    padding-right: $margin-small
    padding-top: $margin-small
    padding-top: $margin-small
    &.alignright
      float: right
      padding-right: 0
      padding-left: $margin-small
    &.aligncenter
      float: none
      display: block
      margin: $margin-tiny auto
      padding: 0

.project-copy-section-title
  padding-top: $margin-basic
  padding-bottom: $margin-tiny
  font-weight: bold !important


// PAGE

#page-copy
  margin-top: $margin-large

// FOOTER

#footer
  opacity: 0
  transition: opacity $basic-animation-speed
  min-height: $margin-basic
  margin-top: $margin-basic
  margin-bottom: $margin-small

.no-js #footer
  opacity: 1


// MEDIA QUERIES

@media screen and (max-width: 800px)

  // PULL DOWN GRID

  .percent-col.into-3
    width: 50%

@media screen and (max-width: 600px)

  // REDECLARE TYPE

  $font-size-basic = 13px
  $font-leading-basic = 1.45em
  $font-tracking-basic = 0.001em
  $font-tracking-large = 0.01em

  $font-size-larger = 17px
  $font-size-heading = 35px
  $font-size-subheading = 22px
  $font-size-caption = 11px

  body
    font-family: 'Cinetype-Regular', helvetica, arial, sans-serif
    font-size: $font-size-basic
    line-height: $font-leading-basic
    letter-spacing: $font-tracking-basic

  h1
    font-size: $font-size-heading

  h2, h3
    font-size: $font-size-subheading

  h4
    font-size: $font-size-basic

  h5, h6
    font-size: $font-size-caption

  h1,h2,h3,h4,h5,h6
    line-height: $font-leading-basic
    font-weight: normal !important

  .font-caption
    font-size: $font-size-caption

  .nomad-button
    a
      font-size: $font-size-larger

  .single-nav
    svg
      width: $font-size-basic

  // REDECLARE MARGINS

  $gutter = 11px

  $margin-small = ($gutter)
  $margin-tiny = ($gutter / 2)
  $margin-micro = ($gutter / 4)
  $margin-basic = ($gutter * 2)
  $margin-large = ($gutter * 4)
  $margin-extra-large = ($gutter * 6)

  .u-pad-basic
    padding: $margin-basic

  .u-pad-small
    padding: $margin-small

  .u-pad-tiny
    padding: $margin-tiny

  .nomad-button
    margin: $margin-basic auto
    padding: $margin-small
    a
      padding: $margin-small

  // HEADER

  #header
    margin-top: $margin-small
    margin-bottom: $margin-basic

  #scroll-to-menu
    top: $margin-small + 2px
    right: $margin-small

  // INDEX

  .type-post, .type-project
    margin-bottom: $margin-small

  .post-title
    padding: $margin-basic

  .post-toggle
    right: $margin-basic

  .post-copy
    padding: $margin-small $margin-basic $margin-basic

  // INDEX PROJECTS

  .index-project-title
    padding: $margin-small 0

  .grid-hover-holder
    padding: $margin-tiny

  // SINGLE

  // SLIDER

  #single-close
    top: $margin-small
    right: $margin-small

  #single-next
    top: 49%
    right: $margin-small

  #single-prev
    top: 49%
    left: $margin-small

  .slider-item
    padding: $margin-basic

  // OVERLAY

  .overlay-nav
    padding: $margin-small
    svg
      max-width: $margin-small

  .overlay-caption-holder
    padding: $margin-small

  // OVERLAY VIDEO

  #video-overlay
    .u-holder
      padding: $margin-basic

  // SINGLE PROJECT

  #project-visuals
    margin-bottom: $margin-extra-large

  .project-visual
    padding: $margin-tiny

  #project-copy-nav
    margin-bottom: $margin-large
    li
      margin-bottom: $margin-micro

  .project-copy-section
    margin-bottom: $margin-large

  .project-copy-section-title
    padding-top: $margin-basic
    padding-bottom: $margin-tiny

  // PAGE

  #page-copy
    margin-top: $margin-large

  // FOOTER

  #footer
    min-height: $margin-basic
    margin-top: $margin-small
    margin-bottom: $margin-small

  // PULL DOWN GRID

  .percent-col.into-3
    width: 100%

  // INLINE IMAGES IN COPY

  .project-copy-section
    margin-bottom: $margin-large
    img
      float: none !important
      display: block !important
      margin: $margin-tiny auto !important
      padding: 0 !important
      padding-top: $margin-tiny
      padding-top: $margin-tiny